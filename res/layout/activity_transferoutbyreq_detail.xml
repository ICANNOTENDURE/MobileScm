<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/title_background" >

        <TextView
            android:id="@+id/reqdetailtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="请求单明细"
            android:textColor="@color/result_text"
            android:textSize="20.0sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="@drawable/title_background"
        android:gravity="left"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/fromloclabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/fromloctitle" />

        <TextView
            android:id="@+id/fromlocdesc"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="供给部门"
            android:textColor="@color/result_text"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/toloclabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/toloctitle" />

        <TextView
            android:id="@+id/tolocdesc"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="请求部门"
            android:textColor="@color/result_text"
            android:textSize="12dp" />

        <Button
            android:id="@+id/preoutbtn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/preoutbtnconfig" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/white" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_background" >

        <ListView
            android:id="@+id/reqitmdetaillist"
            android:layout_width="fill_parent"
            android:layout_height="400dp" >
        </ListView>
    </HorizontalScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/title_background" >

        <TextView
            android:id="@+id/transno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="系统信息"
            android:textColor="@color/result_text"
            android:textSize="15.0sp" />

        <TextView
            android:id="@+id/transrowid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="ROWID"
            android:textColor="@color/result_text"
            android:textSize="15.0sp" />
    </RelativeLayout>

</LinearLayout>