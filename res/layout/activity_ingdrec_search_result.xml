<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffe1e0de"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_top"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/android_title_bg" >

        <ImageView
            android:id="@+id/ingdrecsearch_result_back"
            style="@style/title_right_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/base_action_bar_back_normal" />

        <TextView
            android:id="@+id/textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:text="查询结果"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </RelativeLayout>
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="61dp"
            android:layout_height="40dp"
            android:text="起始于："
            android:textSize="15.0dp"
            android:gravity="center_vertical" />

        <TextView
		    android:id="@+id/result_startdate"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:layout_weight="2"
            android:paddingLeft="8dp"
            android:background="@drawable/edit_text"
            android:textSize="15.0dp" />

        <TextView
            android:layout_width="61dp"
            android:layout_height="40dp"
            android:textSize="15.0dp"
            android:text="截止到："
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/result_enddate"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:layout_weight="2"
            android:paddingLeft="8dp"
            android:background="@drawable/edit_text"
            android:textSize="15.0dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ListView
            android:id="@+id/ingdrecsearch_itm_scroll_list"
            android:layout_width="fill_parent"
            android:layout_height="417dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:cacheColorHint="@android:color/transparent"
            android:scrollbars="none" >
        </ListView>
    </RelativeLayout>
</LinearLayout>