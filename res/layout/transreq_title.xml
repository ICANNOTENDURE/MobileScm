            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="#34495e" />
        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="类组" />
        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="#34495e" />
        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:gravity="center_vertical|center_horizontal"
