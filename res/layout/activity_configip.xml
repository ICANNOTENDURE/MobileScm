<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/android_layout_bg"
    >
	
	<TextView 
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:text="@string/configip_webcontent"
    	android:id="@+id/contentTextView"
    	/>
	<EditText
	    android:hint=""
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_below="@+id/contentTextView"
    	android:id="@+id/config_weburl"
    	android:digits="0123456789."/>

	<TextView
	    android:layout_marginTop="10dp"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:text="@string/configip_filecontent"
    	android:layout_below="@+id/config_weburl"
    	android:id="@+id/webcontentTextView"
    	/>
	<EditText
	    android:hint=""
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:id="@+id/config_fileurl"
    	android:layout_below="@+id/webcontentTextView"
    	android:digits="0123456789."/>

	<Button
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/config_fileurl"
	    android:layout_marginTop="20dp"
	    android:background="@drawable/android_title_bg"
	    android:gravity="center"
	    android:text="@string/configip_btn"
	    android:textColor="#fff"
	    android:id="@+id/configip_btn"
	    android:textSize="20sp" />

</RelativeLayout>